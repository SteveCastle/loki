{
  "name": "loki",
  "productName": "LowKey Image Viewer",
  "description": "A minimalist web native image viewer.",
  "version": "1.0.6",
  "main": "src/electron.js",
  "homepage": "./",
  "license": "MIT",
  "author": {
    "name": "Stephen Castle",
    "email": "stephen@callsignmedia.com",
    "url": "http://lowkeyviewer.com/"
  },
  "scripts": {
    "react-start": "parcel -p 3000 index.html --out-dir build",
    "react-build": "parcel build index.html --out-dir build --public-url ./",
    "electron-build": "electron-builder",
    "clean-build": "rm -rf build/ .cache dist/",
    "build": "yarn react-build && yarn electron-build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron . \""
  },
  "build": {
    "productName": "LowKey Image Viewer",
    "appId": "com.callsign.LowKeyImageViewer",
    "afterSign": "scripts/notarize.js",
    "dmg": {
      "sign": false
    },
    "files": [
      "src/electron.js",
      "src/menu.js",
      "src/assets/*",
      "build/**/*"
    ],
    "fileAssociations": [
      {
        "ext": "jpg",
        "name": "Jpg Image File",
        "role": "Viewer"
      },
      {
        "ext": "jpeg",
        "name": "Jpg Image File",
        "role": "Viewer"
      },
      {
        "ext": "png",
        "name": "PNG Image File",
        "role": "Viewer"
      },
      {
        "ext": "gif",
        "name": "Gif Image File",
        "role": "Viewer"
      },
      {
        "ext": "webm",
        "name": "Webm Video File",
        "role": "Viewer"
      },
      {
        "ext": "flv",
        "name": "Flv Video File",
        "role": "Viewer"
      }
    ],
    "mac": {
      "hardenedRuntime": true,
      "entitlements": "config/entitlements.mac.plist",
      "entitlementsInherit": "config/entitlements.mac.plist",
      "target": "dmg",
      "icon": "src/assets/logo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/logo.png"
    },
    "linux": {
      "target": "deb",
      "icon": "src/assets/logo.png",
      "category": "Development"
    }
  },
  "dependencies": {
    "atob": "^2.1.2",
    "babel-plugin-transform-es2015-classes": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "bluebird": "^3.7.2",
    "btoa": "^1.2.1",
    "electron-is": "^3.0.0",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^4.0.6",
    "electron-settings": "3.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^4.2.0",
    "memoizee": "^0.4.14",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-focus-lock": "^2.2.1",
    "react-scroll-ondrag": "^1.0.0",
    "react-spring": "^8.0.27",
    "react-use-gesture": "^7.0.16",
    "react-window": "^1.8.5",
    "readdir-enhanced": "^6.0.4",
    "shuffle-array": "^1.0.1",
    "styled-components": "^5.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^5.0.2",
    "cross-env": "^7.0.2",
    "electron": "7.2.4",
    "electron-notarize": "^1.0.0",
    "electron-osx-sign": "^0.4.17",
    "electron-packager": "^15.1.0",
    "electron-builder": "^21.2.0",
    "parcel-bundler": "^1.12.4",
    "wait-on": "^5.2.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "osxSign": {
          "identity": "Developer ID Application: Felix Rieseberg (LT94ZKYDCJ)",
          "hardened-runtime": true,
          "entitlements": "entitlements.plist",
          "entitlements-inherit": "entitlements.plist",
          "signature-flags": "library"
        },
        "osxNotarize": {
          "appleId": "felix@felix.fun",
          "appleIdPassword": "my-apple-id-password"
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "loki"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
