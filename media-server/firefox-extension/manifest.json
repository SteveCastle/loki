{
  "manifest_version": 2,
  "name": "Shrike",
  "version": "1.0.0",
  "description": "Create Shrike tasks from the current page URL with custom arguments",
  "browser_specific_settings": {
    "gecko": {
      "id": "shrike@localhost",
      "strict_min_version": "91.0"
    }
  },
  "permissions": ["activeTab", "storage", "http://localhost:8090/*"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Shrike - Create Task"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
