#!/bin/sh
# Wrapper script for ffprobe on macOS
# Uses Homebrew-installed ffprobe if available

if command -v ffprobe >/dev/null 2>&1; then
    exec ffprobe "$@"
else
    echo "Error: ffprobe is not installed on this system." >&2
    echo "Please install ffmpeg (includes ffprobe) using Homebrew:" >&2
    echo "  brew install ffmpeg" >&2
    exit 1
fi
